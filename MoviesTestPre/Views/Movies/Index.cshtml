@model IEnumerable<MoviesTestPre.DTO.MarkDto>

@{
    ViewBag.Title = "Movies";
}

<div class="page-header">
    <h2>Movies</h2>
</div>
<div class="table-responsive">
    <a href="@Url.Action("Create", "Movies")" class="btn btn-link">
        <span>Create</span>
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Comment</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var markDto in @Model)
                {
                    <tr>
                        <td>@markDto.Comment</td>
                        <td>@markDto.UserName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
