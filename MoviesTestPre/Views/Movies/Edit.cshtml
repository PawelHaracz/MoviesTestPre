@model Tuple<IDictionary<int,string>, MoviesTestPre.DTO.MarkDto>
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <label for="movieId" class="col-2 col-form-label">Movie</label>
        <div class="col-10">
            <select class="form-control" id="movieId" name="movieId">
                <option value="" disabled selected>Select movie</option>
                @foreach (var movie in @Model.Item1)
                {
                    <option value="@movie.Key" @(movie.Key == Model.Item2.MovieId ? "selected" : "")>@movie.Value</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="comment" class="col-2 col-form-label">Coment</label>
        <div class="col-10">
            <textarea class="form-control" value="Artisanal kale" id="comment" name="comment"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="userName" class="col-2 col-form-label">Coment</label>
        <div class="col-10">
            <input type="text" class="form-control" value="@Model.Item2.UserName" id="userName" name="userName" readonly=""/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" id="Submit" class="btn btn-default" />
        </div>
    </div>
    <div>
        <input type="hidden" id="id" name="id" value="@Model.Item2.Id"/>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

